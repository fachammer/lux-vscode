{
    "name": "lux-vscode",
    "displayName": "Lux",
    "description": "syntax highlighting for the Lux language",
    "version": "0.0.1",
    "license": "MIT",
    "engines": {
        "vscode": "^1.38.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lux",
                "aliases": [
                    "Lux",
                    "lux"
                ],
                "extensions": [
                    ".lux"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lux",
                "scopeName": "source.lux",
                "path": "./out/syntaxes/lux.tmLanguage.json"
            }
        ]
    },
    "watch": {
        "build": "syntaxes/lux.tmLanguage.yaml",
        "test": "syntaxes/lux.tmLanguage.yaml"
    },
    "scripts": {
        "prebuild": "mkdirp out/syntaxes",
        "build": "npx js-yaml syntaxes/lux.tmLanguage.yaml > out/syntaxes/lux.tmLanguage.json",
        "build:watch": "npm-watch build",
        "pretest": "npm run-script build",
        "test": "vscode-tmgrammar-snap -s source.lux -g out/syntaxes/lux.tmLanguage.json -t \"test/syntaxes/**/*.lux\"",
        "test:watch": "npm-watch test",
        "commit-snapshots": "vscode-tmgrammar-snap -s source.lux -g out/syntaxes/lux.tmLanguage.json -t \"test/syntaxes/**/*.lux\" --updateSnapshot",
        "prepublish": "npm run-script build"
    },
    "devDependencies": {
        "js-yaml": "^3.13.1",
        "mkdirp": "^0.5.1",
        "npm-watch": "^0.6.0",
        "vscode-tmgrammar-test": "^0.0.6"
    }
}
